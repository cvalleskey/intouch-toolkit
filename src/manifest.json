{
  "compatibleVersion": "51",
  "bundleVersion": 1,
  "icon": "icon.png",
  "commands": [
    {
      "name": "Export Styleguide",
      "identifier": "intouch-toolkit.styleguide.get-styleguide",
      "script": "./styleguide.js",
      "handlers": { "run": "exportStyleguide" }
    },
    {
      "name": "Spacing Units",
      "identifier": "intouch-toolkit.styleguide.generate-spacing",
      "script": "./styleguide.js",
      "handlers": { "run": "generateSpacing" }
    },
    {
      "name": "Type Scale",
      "identifier": "intouch-toolkit.styleguide.generate-type-scale",
      "script": "./styleguide.js",
      "handlers": { "run": "generateTypeScale" }
    },
    {
      "name": "Color Range",
      "identifier": "intouch-toolkit.styleguide.generate-colors",
      "script": "./styleguide.js",
      "handlers": { "run": "generateColors" }
    },
    {
      "name": "Toggle Superscript",
      "identifier": "intouch-toolkit.auto-superscript",
      "shortcut": "ctrl command =",
      "script": "./auto-superscript.js",
      "handlers": {
        "run": "autoSuperscript",
        "actions": {
          "*": "onTextStyleUpdateBegin"
        }
      }
    },
    {
      "name": "Toggle Subscript",
      "identifier": "intouch-toolkit.auto-subscript",
      "shortcut": "ctrl command -",
      "script": "./auto-superscript.js",
      "handlers": {
        "run": "autoSubscript"
      }
    },
    {
      "name": "Update Selected Text Styles",
      "identifier": "intouch-toolkit.update-formatted-text-style",
      "shortcut": "ctrl command s",
      "script": "./update-formatted-text-style.js",
      "handlers": {
        "run": "updateFormattedTextStyle"
      }
    },
    {
      "name": "Sync Libary Text Styles",
      "identifier": "intouch-toolkit.sync-library-text-styles",
      "shortcut": "ctrl command option s",
      "script": "./update-formatted-text-style.js",
      "handlers": {
        "run": "syncLibraryTextStyles"
      }
    },
    {
      "name": "Create Typography Scale",
      "identifier": "intouch-toolkit.create-typography-scale",
      "script": "./typography.js",
      "handlers": {
        "run": "updateFontScales"
      }
    },
    {
      "name": "Generate grid...",
      "identifier": "intouch-toolkit.generate-grid",
      "shortcut": "ctrl command g",
      "script": "./generate-grid.js",
      "handlers": {
        "run": "onRun",
        "actions": {
          "Shutdown": "onShutdown"
        }
      }
    },
    {
      "name": "1 - XSmall (4px)",
      "identifier": "intouch-toolkit.create-padding.xsmall",
      "shortcut": "control command 1",
      "script": "./create-padding.js",
      "handlers": {
        "run": "paddingXSmall"
      }
    },
    {
      "name": "2 - Small (8px)",
      "identifier": "intouch-toolkit.create-padding.small",
      "shortcut": "control command 2",
      "script": "./create-padding.js",
      "handlers": {
        "run": "paddingSmall"
      }
    },
    {
      "name": "3 - Medium (16px)",
      "identifier": "intouch-toolkit.create-padding.medium",
      "shortcut": "control command 3",
      "script": "./create-padding.js",
      "handlers": {
        "run": "paddingMedium"
      }
    },
    {
      "name": "4 - Large (32px)",
      "identifier": "intouch-toolkit.create-padding.large",
      "shortcut": "control command 4",
      "script": "./create-padding.js",
      "handlers": {
        "run": "paddingLarge"
      }
    },
    {
      "name": "5 - XLarge (64px)",
      "identifier": "intouch-toolkit.create-padding.xlarge",
      "shortcut": "control command 5",
      "script": "./create-padding.js",
      "handlers": {
        "run": "paddingXLarge"
      }
    },
    {
      "name": "6 - XXLarge (128px)",
      "identifier": "intouch-toolkit.create-padding.xxlarge",
      "shortcut": "control command 6",
      "script": "./create-padding.js",
      "handlers": {
        "run": "paddingXXLarge"
      }
    },
    {
      "name": "Export to PDF...",
      "identifier": "intouch-toolkit.export-jpgs-to-pdf",
      "shortcut": "command option shift e",
      "script": "./export-jpgs-to-pdf.js",
      "handlers": {
        "run": "onRun",
        "actions": {
          "Shutdown": "onShutdown"
        }
      },
      "description": "Quick export all selected Artboards into a PDF document."
    }
  ],
  "menu": {
    "title": "Intouch Toolkit",
    "items": [
      "intouch-toolkit.styleguide.get-styleguide",
      {
        "title": "Generate...",
        "items": [
          "intouch-toolkit.styleguide.generate-type-scale",
          "intouch-toolkit.styleguide.generate-spacing",
          "intouch-toolkit.styleguide.generate-colors"
        ]
      },
      "-",
      "intouch-toolkit.auto-superscript",
      "intouch-toolkit.auto-subscript",
      "intouch-toolkit.update-formatted-text-style",
      "intouch-toolkit.sync-library-text-styles",
      "-",
      {
        "title": "Utility",
        "items": [
          "intouch-toolkit.generate-grid",
          {
            "title": "Padding",
            "items": [
              "intouch-toolkit.create-padding.xsmall",
              "intouch-toolkit.create-padding.small",
              "intouch-toolkit.create-padding.medium",
              "intouch-toolkit.create-padding.large",
              "intouch-toolkit.create-padding.xlarge",
              "intouch-toolkit.create-padding.xxlarge"
            ]
          }
        ]
      }
    ]
  },
  "description": "Productivity tools for use in project work"
}
